ifneq (,$(findstring .mk,@arch@))
ARCH = ../makefiles/@arch@
else
ARCH = ../makefiles/@arch@.mk
endif

include $(ARCH)

LDFLAGS = $(LFLAGS) $(DFLAGS)

MAIN = main.cpp
SOURCES_CPP = cDBCSR_tools.cpp c_scf.cpp
SOURCES_C = array_tools.C Utilities.C CSR.C DiagScaLapack.C Density.C EnergyVector.C Pardiso.C Quadrature.C

OBJECTS = $(SOURCES_CPP:.cpp=.o) $(SOURCES_C:.C=.o)
EXECUTABLE = interface
MYEXECUTABLE = mymain

all: $(SOURCES_CPP) $(SOURCES_C) $(EXECUTABLE)

$(EXECUTABLE): $(MAIN:.cpp=.o) $(OBJECTS)
	$(CPP) $(CXXFLAGS) $(INCLUDES) -o $@ $(OBJECTS) $(LDFLAGS) $(LIBS)

.cpp.o:
	$(CPP) $(INCLUDES) $(CXXFLAGS) -c $< -o $@

.C.o:
	$(CPP) $(INCLUDES) $(CXXFLAGS) -c $< -o $@ $(LDFLAGS) $(LIBS)

$(MYEXECUTABLE): $(MYEXECUTABLE).cc $(SOURCES_CPP) $(SOURCES_C) $(OBJECTS)
	$(CPP) $(CXXFLAGS) $(INCLUDES) $(MYEXECUTABLE).cc -o $@ $(OBJECTS) $(PARDISO) $(LDFLAGS) $(LIBS)

.PHONY: clean
clean:
	rm -rf *.o $(EXECUTABLE) $(MYEXECUTABLE) output.out csr.*
