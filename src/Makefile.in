ifneq (,$(findstring .mk,@arch@))
ARCH = ../makefiles/@arch@
else
ARCH = ../makefiles/@arch@.mk
endif

include $(ARCH)

INP_DIR = ../inputfiles/files

LDFLAGS = $(LFLAGS) $(DFLAGS)

MAIN = main.cpp
SOURCES_CPP = cDBCSR_tools.cpp c_scf.cpp
SOURCES_C = array_tools.C Utilities.C CSR.C DiagScaLapack.C Density.C EnergyVector.C Quadrature.C GreenSolver.C KPointIntegration.C GetSingularities.C GetSigma.C rGF.C tmprGF.C @pardiso@

OBJECTS = $(SOURCES_CPP:.cpp=.o) $(SOURCES_C:.C=.o)
EXECUTABLE = interface
MYEXECUTABLE = mymain

all: $(SOURCES_CPP) $(SOURCES_C) $(EXECUTABLE)

$(EXECUTABLE): $(MAIN:.cpp=.o) $(OBJECTS)
	$(CPP) $(CXXFLAGS) $(INCLUDES) -o $@ $(MAIN:.cpp=.o) $(OBJECTS) $(LINLIN) @pardiso_so@ $(LDFLAGS) $(LIBS)

.cpp.o:
	$(CPP) $(INCLUDES) $(CXXFLAGS) -c $< -o $@ $(LDFLAGS)

.C.o:
	$(CPP) $(INCLUDES) $(CXXFLAGS) -c $< -o $@ $(LDFLAGS)

$(MYEXECUTABLE): $(MYEXECUTABLE).cc $(SOURCES_CPP) $(SOURCES_C) $(OBJECTS)
	$(CPP) $(CXXFLAGS) $(INCLUDES) $(MYEXECUTABLE).cc -o $@ $(OBJECTS) @pardiso_so@ $(LDFLAGS) $(LIBS)

.PHONY: clean
clean:
	rm -rf *.o $(EXECUTABLE) $(MYEXECUTABLE) $(INP_DIR)/output.out csr.*
