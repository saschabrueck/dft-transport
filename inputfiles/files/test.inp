&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME ../GTH_BASIS_SETS
    POTENTIAL_FILE_NAME ../POTENTIAL
    &MGRID
      CUTOFF 200
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-12
      EXTRAPOLATION PS 
      EXTRAPOLATION_ORDER 2
      MAP_CONSISTENT
      LS_SCF
    &END QS
    &SCF
      EPS_SCF 1.0E-6
      SCF_GUESS ATOMIC
      MAX_SCF 10
    &END SCF
    &LS_SCF
      MAX_SCF    1
      EPS_FILTER 1.0E-7
      EPS_SCF    1.0E-6
      MU        -0.20
      MIXING_FRACTION 0.45
      EXTERNAL_SCF F
    &END
    &XC
      &XC_FUNCTIONAL PADE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 6.0 6.0 6.0
    &END CELL
    &COORD
    O   0.000000    0.000000   -0.065587
    H   0.000000   -0.757136    0.520545
    H   0.000000    0.757136    0.520545
    &END COORD
    &KIND H
      BASIS_SET DZVP-GTH
      POTENTIAL GTH-BLYP-q1
    &END KIND
    &KIND O
      BASIS_SET DZVP-GTH
      POTENTIAL GTH-BLYP-q6
    &END KIND
    &TOPOLOGY
      CONNECTIVITY GENERATE
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  PROJECT H2O-geo-pdos
  PRINT_LEVEL MEDIUM
  RUN_TYPE ENERGY
!  TRACE
&END GLOBAL
