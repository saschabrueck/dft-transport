@SET NCELLS 20
&FORCE_EVAL
  METHOD QS
  &DFT
!    &EXTERNAL_POTENTIAL
!      FUNCTION  (VS+VG+VD)/(ONE+EXP(X-(LS+LC)))/(ONE+EXP(-X+LS))-VS/(ONE+EXP(X-(LS+LC)))-VD/(ONE+EXP(-X+LS))
!      PARAMETERS ONE VS VG VD LS LC
!      VALUES 1.0 0.0 0.00209018 0.0 45.73136892 66.89630000
!      !VALUES 1.0 0.0 0.00209018 0.01837465 45.73136892 66.89630000
!    &END
    &TRANSPORT
      DENSITY_MATRIX_CONSTRUCTION_METHOD TRANSPORT
      EPS_LIMIT 1.0E-4
      EPS_DECAY 1.0E-6
      N_ABSCISSAE 64
      N_CELLS ${NCELLS}
    &END
!   &PRINT
!    &V_HARTREE_CUBE
!    &END
!    &MO_CUBES
!      NHOMO 10
!      NLUMO 10
!    &END
!    &E_DENSITY_CUBE
!     &EACH
!      QS_SCF 1
!     &END
!    &END
!    &TOT_DENSITY_CUBE
!     &EACH
!      QS_SCF 1
!     &END
!    &END
!   &END
    BASIS_SET_FILE_NAME ../BASIS_ZIJLSTRA
    POTENTIAL_FILE_NAME ../POTENTIAL 
    &MGRID
      CUTOFF 200
      &RS_GRID
         MAX_DISTRIBUTED_LEVEL 5
      &END
      SKIP_LOAD_BALANCE_DISTRIBUTED
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-10
      LS_SCF
      &DISTRIBUTION
        BASIC_OPTIMIZATION .FALSE.
        BASIC_SPATIAL_OPTIMIZATION .TRUE.
      &END
    &END QS
    &LS_SCF
      MAX_SCF    20
      EPS_FILTER 1.0E-5
      EPS_SCF    1.0E-5
      MU        -0.05
      MIXING_FRACTION 0.2
      REPORT_ALL_SPARSITIES OFF
      PERFORM_MU_SCAN OFF
      S_PRECONDITIONER NONE
      PURIFICATION_METHOD TRS4
      &CURVY_STEPS
      &END
      !RESTART_READ
      RESTART_WRITE
    &END
    &SCF
      !SCF_GUESS RESTART
      MAX_SCF    30
      EPS_SCF    1.0E-6
      &OT
      &END
      &OUTER_SCF
         MAX_SCF    30
         EPS_SCF    1.0E-6
      &END
      &PRINT
        &RESTART ON
        &END
      &END
    &END
    &XC
      &XC_FUNCTIONAL PADE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 85.2 20 20
      MULTIPLE_UNIT_CELL 1 1 1
    &END CELL
    &TOPOLOGY
      MULTIPLE_UNIT_CELL 1 1 1
      COORD_FILE_NAME cnt8_doping.xyz
      COORDINATE XYZ
      CONNECTIVITY off
    &END
    &KIND H
      BASIS_SET 3SP-GTH
      POTENTIAL GTH-PADE-q1
    &END KIND
    &KIND C
      BASIS_SET 3SP-GTH
      POTENTIAL GTH-PADE-q4
    &END KIND
    &KIND N
      BASIS_SET 3SP-GTH
      POTENTIAL GTH-PADE-q5
    &END KIND
    &PRINT
      &ATOMIC_COORDINATES OFF
      &END
      &MOLECULES OFF
      &END
    &END
  &END SUBSYS
&END FORCE_EVAL
&MOTION
 &GEO_OPT
 &END
&END
&GLOBAL
  &DBCSR
     SUBCOMMUNICATORS .TRUE.
     COMM_THREAD_LOAD 80
  &END
  PROJECT CNT_DOPING
  RUN_TYPE ENERGY
  PRINT_LEVEL MEDIUM
  &TIMINGS
     THRESHOLD 0.000001
  &END
  EXTENDED_FFT_LENGTHS
!TRACE
!TRACE_MASTER .FALSE.
!TRACE_MAX 1000
&END GLOBAL

