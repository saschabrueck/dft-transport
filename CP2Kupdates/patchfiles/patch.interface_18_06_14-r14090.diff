+  SUBROUTINE dbcsr_fill (dblk, row_p, col_i, blk_p, nblks, darea_size, new_matrix, error)
+
+    TYPE(dbcsr_data_obj), INTENT(IN)         :: dblk
+    INTEGER, DIMENSION(:), INTENT(IN), &
